<div class='container'>
  <div class='row'>
    <div class='col-md-5 offset-md-3'>
      <div class='card card-body bg-dark p-4 text-white rounded-0'>
        <form action='/tasks/{{task._id}}/edit' method='POST'>

          <h1>Update A Task</h1>

          <div class='mb-3'>
            <input
              class='form-control rounded-0 bg-dark text-white'
              type='text'
              name='title'
              placeholder='Title'
              value='{{task.title}}'
            />
          </div>

          <div class='mb-3'>
            <textarea
              class='form-control rounded-0 bg-dark text-white'
              name='description'
              rows='3'
              placeholder='Add a Description'
            >{{task.description}}</textarea>
          </div>

          <button class='btn btn-primary'>Update</button>

        </form>
      </div>
    </div>
  </div>
</div>